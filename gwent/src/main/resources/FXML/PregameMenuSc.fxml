            <image>
                <Image url="@../images/cards/scoiatael/faction_scoiatael.jpg"/>
            </image>
        </ImageView>
        <VBox alignment="CENTER" layoutX="532.0" prefHeight="455.0" prefWidth="248.0" spacing="10">
            <children>
                <ListView fx:id="userDeckListView" prefHeight="455.0" prefWidth="240.0"/>
            </children>
        </VBox>
        <Button layoutX="431.0" layoutY="165.0" mnemonicParsing="false" onMouseClicked="#downloadDeck" prefHeight="20.0"
                prefWidth="80.0" text="download deck">
            <font>
                <Font size="9.0"/>
            </font>
        </Button>
        <Button layoutX="440.0" layoutY="140.0" mnemonicParsing="false" onMouseClicked="#uploadDeck" text="upload deck">
            <font>
                <Font size="9.0"/>
            </font>
        </Button>
        <Button fx:id="startGame" layoutX="446.0" layoutY="423.0" mnemonicParsing="false" text="start game"/>
        <Label layoutX="256.0" layoutY="91.0" text="change faction:" textFill="WHITE"/>
        <Button fx:id="goToMainMenu" layoutX="258.0" layoutY="423.0" mnemonicParsing="false" text="Main Manu"/>
