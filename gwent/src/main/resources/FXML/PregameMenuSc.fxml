        <VBox alignment="CENTER" prefHeight="455.0" prefWidth="248.0" spacing="10">
            <ListView fx:id="cardsListView" prefHeight="455.0" prefWidth="240.0"/>
        </VBox>
        <ChoiceBox fx:id="factionChoiceBox" layoutX="400.0" layoutY="87.0"/>
        <Label layoutX="330.0" layoutY="34.0" text="Scoia'tael" textFill="WHITE">
            <font>
                <Font name="Copperplate Gothic Bold" size="20.0"/>
