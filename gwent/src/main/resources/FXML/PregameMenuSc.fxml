        </Label>
        <Label layoutX="338.0" layoutY="259.0" text="Total cards in deck:" textFill="WHITE"/>
        <Label fx:id="totalCardsInDeck" alignment="CENTER" layoutX="364.0" layoutY="277.0" prefHeight="0.0"
               prefWidth="50.0" text="0" textFill="WHITE"/>
        <Label layoutX="331.0" layoutY="301.0" text="Number of unit cards:" textFill="WHITE"/>
        <Label fx:id="numberOfUnitCards" alignment="CENTER" layoutX="385.0" layoutY="319.0" text="0" textFill="WHITE"/>
